{
  "name": "@devlikeapro/n8n-nodes-waha",
  "version": "2025.2.9",
  "description": "n8n to connect with WAHA (Whatsapp HTTP API)",
  "keywords": [
    "n8n-community-node-package"
  ],
  "license": "MIT",
  "homepage": "https://n8n.io",
  "author": {
    "name": "WAHA",
    "email": "waha@devlike.pro"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devlikeapro/n8n-nodes-waha.git"
  },
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "main": "index.js",
  "scripts": {
    "build": "tsc && gulp build:icons",
    "test": "jest",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "prepublishOnly": "npm run build && npm run lint -c .eslintrc.prepublish.js nodes credentials package.json"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/WAHAApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/WAHA/WAHA.node.js",
      "dist/nodes/WAHA/WAHATrigger.node.js"
    ]
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.21",
    "@types/node": "^25.0.3",
    "@types/request-promise-native": "~1.0.21",
    "@typescript-eslint/parser": "~8.50",
    "eslint-plugin-n8n-nodes-base": "^1.16.4",
    "gulp": "^5.0.1",
    "jest": "^30.2.0",
    "n8n-core": "*",
    "n8n-workflow": "*",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "typescript": "~5.9.3"
  },
  "dependencies": {
    "@azure/msal-node": "^3.8.4",
    "@devlikeapro/n8n-openapi-node": "^0.1.4",
    "lodash": "^4.17.21",
    "openapi-types": "^12.1.3",
    "pino": "^10.1.0"
  }
}
